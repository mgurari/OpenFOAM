FoamFile
{
	format ascii;
	class volScalarField;
	object omega;
}

omegaInlet 8; //defined by omega = k^0.5/(Cmu^0.25*L), Cmu = 0.09, L = 0.07 * reference length

dimensions [0 0 -1 0 0 0 0];

internalField uniform $omegaInlet;

boundaryField
{
	inlet
	{
		type fixedValue;
		value uniform $omegaInlet;
	}

	freestream
	{
		type inletOutlet;
		inletValue uniform $omegaInlet;
		value uniform $omegaInlet;
	}

	body
	{
		type omegaWallFunction;
		value uniform $omegaInlet;
	}

	center
	{
		type symmetryPlane;
	}
}
